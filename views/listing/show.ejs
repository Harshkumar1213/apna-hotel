<%layout("/layouts/boilerplate")%>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-3">
      <h3><%=listing.title%></h3>
      <div class="card listingCard col-6" style="width: 40rem">
        <img
          src="<%=listing.image.url%>"
          class="card-img-top show-img"
          alt="listing-img"
        />
        <div class="card-body">
          <p class="card-text">
            Owned by <%=listing.owner.username%><br />
            <%=listing.description%><br />
            <b>&#8377; <%=listing.price%></b>/night<br />
            <%=listing.location%>, <%=listing.country%>
          </p>
        </div>
      </div>
      <%if(currUser && currUser._id.equals(listing.owner._id)){%>
      <div class="btns mt-2">
        <a class="btn btn-info mb-2" href="/listings/<%=listing.id%>/edit"
          >Edit</a
        >
        <form method="post" action="/listings/<%=listing.id%>/?_method=delete">
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <%}%>
      <div class="col-9 mt-2 mb-3">
        <hr />
        <h4>Leave a Review</h4>
        <%if(currUser){%>
        <form
          action="/listings/<%=listing.id%>/reviews"
          method="post"
          class="needs-validation"
          novalidate
        >
          <div>
          <fieldset class="starability-slot">
            <legend>First rating:</legend>
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="1"
              checked
              aria-label="No rating."
            />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
          <div>
            <label class="form-label" for="comment">Comments</label>
            <textarea
              class="form-control"
              name="review[comment]"
              id="comment"
              cols="10"
              rows="5"
              required
            ></textarea>
            <div class="valid-feedback">Comment Fill</div>
            <div id="validationServerUsernameFeedback" class="invalid-feedback">
              Please Fill Comment.
            </div>
          </div>
          <button class="btn btn-outline-info mt-2">Submit</button>
        </form>
        <%}%>
        <hr />
        <%if (listing.reviews.length > 0){%>
        <div class="row">
          <h4>All Reviews</h4>
          <%for(review of listing.reviews){%>
          <div class="card col-5 mb-2 ms-3">
            <div class="card-body m-1">
              <h6>@<%=review.author.username%></h6>
              <p class="card-subtitle"><%=review.comment%></p>
              <p
                class="card-subtitle fs-6 starability-result"
                data-rating="<%=review.rating%>"
              ></p>
              <form
                method="post"
                action="/listings/<%=listing.id%>/reviews/<%=review.id%>/?_method=delete"
              >
                <button class="btn btn-sm btn-outline-danger p-1 mt-1">
                  Delete
                </button>
              </form>
            </div>
          </div>
          <%}%>
        </div>
        <%}%>
      </div>
    </div>
  </div>
</body>
